<p id="notice"><%= notice %></p>

<h1>Photos</h1>

  <% @photos.each do |photo| %>

    <div class="row">
      <div class="col"></div>
      <div class="col">

        <div class="card" style="width: 20rem;">
          <img class="card-img-top" src="<%= photo.image_url %>" alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%= photo.user.username %></h4>
            <%= link_to like_photo_path(photo), method: :put do %>
              Upvote
              <%= photo.get_upvotes.size %>
            <% end %>
            <p class="card-text"><%= photo.caption %></p>
            <%= link_to 'Show', photo %>
            <%= link_to 'Edit', edit_photo_path(photo) %>
            <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>

            <% @comments = photo.comments %>
            <% @comments.each do |comment| %>
              <li><%= comment.user_id %> said: <%= comment.content %></li>
            <% end %>

          </div>
        </div>

      </div>
      <div class="col"></div>
    </div>

  <% end %>

<br>

<%= link_to 'New Photo', new_photo_path %>
